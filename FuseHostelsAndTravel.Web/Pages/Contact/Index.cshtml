@page "/contact"
@model FuseHostelsAndTravel.Web.Pages.Contact.IndexModel
@using AspNetCore.ReCaptcha

<section id="getInTouch" class="bg-light overflow-hidden position-relative">
    <div class="container-fluid">
        <div class="container pt-8 pb-8">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-6 has-parallax-scroll">
                    <h1 class="display-3 mb-4">GET IN TOUCH</h1>
                    <p class="mb-0">Do you have a question? Or, do you want to know more about our hostels and tours? Reach out to our team via the enquiry form. We’re happy to help!</p>
                    <div class="card mt-5">
                        <div class="card-body p-5">
                            <div class="d-flex justify-content-center">
                                <h4 class="tilted display-6">HOW CAN WE HELP?</h4>
                            </div>
                            <form method="post" id="contact-form">
                                <div asp-validation-summary="ModelOnly" class="fuse-validation"></div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <!-- Name input -->
                                        <div class="form-outline mb-4 mt-4">
                                            <input asp-for="Name" class="form-control" autocomplete="username" aria-required="true" />
                                            <label asp-for="Name" class="form-label"></label>
                                        </div>
                                        <span asp-validation-for="Name" class="fuse-validation"></span>
                                    </div>
                                    <div class="col-lg-12">
                                        <!-- Email input -->
                                        <div class="form-outline mb-4">
                                            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                                            <label asp-for="Email" class="form-label"></label>
                                        </div>
                                        <span asp-validation-for="Email" class="fuse-validation"></span>
                                    </div>
                                    <div class="col-lg-12">
                                        <!-- Message input -->
                                        <div class="form-outline mb-4">
                                            <textarea asp-for="Message" class="form-control" rows="4" style="height:129px"></textarea>
                                            <label asp-for="Message" class="form-label"></label>
                                        </div>
                                        <span asp-validation-for="Message" class="fuse-validation"></span>
                                    </div>
                                    <div class="col-lg-12 mb-4">
                                        <recaptcha />
                                    </div>
                                    <input asp-for="HoneyPot" class="d-none" />
                                </div>
                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary d-block w-100">Send Message</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @Html.DisplayFor(x => x.OvalContainers)
    </div>
</section>
<section id="socials">
    <div class="container-fluid bg-gray">
        <div class="container py-4 has-parallax-scroll">
            <div class="row align-items-center">
                <div class="col-lg-3 mb-3 mb-lg-0 text-center text-lg-end">
                    <!-- Instagram -->
                    <a class="btn btn-floating m-1" href="https://www.facebook.com/fusehostelsandtravel" target="_blank" role="button"><i class="fab fa-instagram display-7 text-light-purple"></i></a>
                </div>
                <div class="col-lg-6 mb-3 mb-lg-0 text-center">
                    <p class="text-white">Follow us to keep up to date with our latest news and events!</p>
                </div>
                <div class="col-lg-3 text-center text-lg-start">
                    <!-- Facebook -->
                    <a class="btn btn-floating m-1" href="https://www.instagram.com/fusehostels" target="_blank" role="button"><i class="fab fa-facebook display-7 text-light-purple"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="hostels">
    <div class="container pt-8 pb-8">
        <div class="row mb-8">
            <div class="col-12 text-center has-parallax-scroll">
                <h2>HOSTEL DETAILS</h2>
            </div>
        </div>
        <div class="row">
            @if (Model.Hostels.Any())
            {
                var animationDelay = 200;
                foreach (var hostel in Model.Hostels)
                {
                    var hostelAddressGoogleFormat = $"{hostel.AddressLine1.Replace(" ", "+").Replace(",", "")}+{hostel.AddressLine2.Replace(" ", "+").Replace(",", "")}";

                    <div class="col-lg-4 @(hostel != Model.Hostels.Last() ? "mb-5" : "") mb-lg-0 has-parallax-scroll">
                        <div class="card shadow-0 bg-light-gray">
                            <div class="card-body">
                                <h4 class="tilted display-6 mb-4 mt-n5 ms-n4">@hostel.Name</h4>
                                <table cellpadding="8">
                                    <tr>
                                        <td><i class="fa-solid fa-phone text-purple"></i></td>
                                        <td>@hostel.ContactNumber</td>
                                    </tr>
                                    <tr>
                                        <td><i class="fa-solid fa-location-dot text-purple"></i></td>
                                        <td>@($"{hostel.AddressLine1}, {hostel.AddressLine2}")</td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td><a href="@($"http://maps.google.com?saddr=My+Location&daddr={hostelAddressGoogleFormat}")" target="_blank">DIRECTIONS</a></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    animationDelay += 200;
                }
            }
        </div>
    </div>
</section>