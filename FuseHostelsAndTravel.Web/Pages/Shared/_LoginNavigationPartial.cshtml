@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var httpContext = HttpContextAccessor.HttpContext;

    if (httpContext != null)
    {
        var currentPath = httpContext.Request.Path.Value != null ? httpContext.Request.Path.Value : "/";

        <ul class="navbar-nav mb-2 mb-lg-0 d-flex align-items-lg-center">
            @if (SignInManager.IsSignedIn(User))
            {
                <li class="nav-item dropdown mt-0 mt-lg-0 mb-lg-0">
                    <a class="nav-link d-none d-lg-block dropdown-toggle @(currentPath.Contains("/my-account") ? "active" : "" )" asp-area="Identity" asp-page="/Account/Manage/Index"  id="navbarDropdownMyAccount" role="button" aria-expanded="false" aria-haspopup="true">MY ACCOUNT</a>

                    <ul class="dropdown-menu" style="right:1rem; left:unset;">
                        <li class="dropdown-item text-dark float-end">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="me-lg-2 bg-transparent border-0 text-dark">
                                    Logout
                                </button>
                            </form>
                        </li>
                    </ul>

                    <div class="accordion accordion-flush accordion-borderless d-lg-none d-block" id="myAccountAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="myAccountAccordionHeading">
                                    <button class="accordion-button collapsed @(currentPath.Contains("/my-account") ? "active" : "" )" data-mdb-toggle="collapse" data-mdb-target="#myAccountAccordionCollapse" aria-expanded="false" aria-controls="myAccountAccordionCollapse" type="button">
                                        MY ACCOUNT <i class="fa-solid fa-caret-down ms-3"></i>
                                    </button>
                                </h2>
                                <div id="myAccountAccordionCollapse" class="accordion-collapse collapse" aria-labelledby="myAccountAccordionHeading" data-mdb-parent="#myAccountAccordion">
                                    <div class="accordion-body">
                                        <ul>
                                            <li class="nav-item">
                                                <a class="nav-link" asp-area="Identity" asp-page="/Manage/Index">Manage</a>
                                            </li>
                                            <li class="nav-item">
                                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                                    <button type="submit" class="nav-link me-lg-2 bg-transparent border-0">
                                                        Logout
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                </li>

                <li class="nav-item mt-3 mt-lg-0">
                    <a class="btn btn-primary mb-1 pe-5 ps-5 d-none d-lg-block" data-mdb-toggle="modal" data-mdb-target="#bookNowModal">Book</a>
                    <a class="nav-link mb-1 p-0 d-block d-lg-none bg-transparent text-start border-0" data-mdb-toggle="modal" data-mdb-target="#bookNowModal">BOOK</a>
                </li>
            }
            else
            {
                <li class="nav-item mb-3 mb-lg-0">
                    <a class="nav-link me-lg-2" data-mdb-toggle="modal" data-mdb-target="#logInModal">SIGN IN</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-primary mb-1 ms-lg-3 pe-5 ps-5 d-none d-lg-block" data-mdb-toggle="modal" data-mdb-target="#bookNowModal">Book</a>
                    <a class="nav-link mb-1 p-0 d-block d-lg-none bg-transparent text-start border-0" data-mdb-toggle="modal" data-mdb-target="#bookNowModal">BOOK</a>
                </li>
            }
        </ul>
    }
}
