@model AlternatingCardHeightComponent

<div class="container pt-8 pb-8">
    <div class="row d-flex flex-row-reverse gx-lg-8 alternating-card-height">
        <div class="col-lg-6 col-md-12 col-xs-12 mb-5 mb-lg-0">
            <div class="row animation" data-mdb-toggle="animation" data-mdb-animation-start="@Model.AnimationStart" data-mdb-animation-on-scroll="once" data-mdb-animation="fade-in-up" data-mdb-animation-delay="0" data-mdb-animation-duration="2000">
                <h2>@Model.Header.Title</h2>
                <p>@Model.Header.Body</p>
            </div>
        </div>
        @Html.DisplayFor(x => x.Cards)
    </div>
</div>